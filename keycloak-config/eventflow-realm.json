{
  "realm": "eventflow",
  "enabled": true,
  "displayName": "EventFlow",
  "sslRequired": "none",
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator role"
      },
      {
        "name": "ORGANIZER",
        "description": "Event organizer role"
      },
      {
        "name": "ATTENDEE",
        "description": "Event attendee role"
      },
      {
        "name": "STAFF",
        "description": "Event staff role for check-in"
      }
    ]
  },
  "clients": [
    {
      "clientId": "eventflow-api",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "CHANGE_ME_AFTER_FIRST_IMPORT",
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000"
      ],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "attributes": {
        "access.token.lifespan": "300"
      }
    }
  ],
  "users": [
    {
      "username": "organizer1",
      "enabled": true,
      "email": "organizer1@example.com",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "password123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ORGANIZER"
      ]
    },
    {
      "username": "attendee1",
      "enabled": true,
      "email": "attendee1@example.com",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "password123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ATTENDEE"
      ]
    },
    {
      "username": "staff1",
      "enabled": true,
      "email": "staff1@example.com",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "password123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "STAFF"
      ]
    },
    {
      "username": "admin1",
      "enabled": true,
      "email": "admin1@example.com",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "password123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ADMIN"
      ]
    }
  ]
}

